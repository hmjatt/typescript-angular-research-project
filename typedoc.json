{
  "entryPoints": ["src"],               // Reference the src directory
  "out": "docs",                        // Output folder for generated docs
  "includeVersion": true,               // Include version in the docs
  "excludeExternals": true,             // Exclude external modules like node_modules
  "excludePrivate": true,               // Exclude private members from documentation
  "excludeProtected": false,            // Include protected members
  "readme": "README.md",                // Use your README as the landing page
  "hideGenerator": true,                // Hide the "Generated by TypeDoc" footer
  "entryPointStrategy": "expand"        // Expands entry points to include files within the directory
}
